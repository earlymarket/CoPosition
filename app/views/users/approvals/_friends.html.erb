<% if @friend_requests.length > 0 || @pending_friends.length > 0 %>
  You have <%= @friend_requests.length %> friend requests and <%= @pending_friends.length %> pending friends.
<% end %>

<div class="collection">
  <% @friends.each do |friend| %>
    <div class="collection-item row valign-wrapper">
      <div class="col s8 valign">
        <h5><%= friend.email %></h5>
      </div>
      <div class="col s4 valign right-align">
      <%= button_to "Revoke Approval", reject_user_approval_path(current_user.url_id, Approval.where(user: current_user, approvable: friend, approvable_type: "User").first.id), remote: true, class: "btn-flat" %>
      </div>
    </div>
  <% end %>
</div>
