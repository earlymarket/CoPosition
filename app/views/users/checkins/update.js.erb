<%= raw render_flash %>
var checkin = _.find(gon.checkins, _.matchesProperty('id',<%= @checkin.id %>));
checkin.fogged = <%= @checkin.fogged %>
//change open popups

if(<%= @checkin.fogged %>){
  $('#fog<%=@checkin.id%>').attr('class', 'fogged enabled-icon')
    .parent().prepend('<li class="foggedAddress">Fogged address: <%= @checkin.fogged_city %></li>');
  $('.foggedAddress').hide().slideDown('fast');
} else {
  $('#fog<%=@checkin.id%>').attr('class', 'disabled-icon');
  $('.foggedAddress').slideUp('fast', function(){
    $(this).remove();
  });
}

//refresh the state of all markers
if(!COPO.maps.queueCalled) { COPO.maps.queueRefresh(gon.checkins) }
