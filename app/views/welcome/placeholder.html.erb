<head>
  <title>Coposition</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body class="placeholder">
  <%= render "application/video" %>

  <div class="valign-wrapper bg-wrapper">
    <div class="valign center-align center z-depth-3 bg-ribbon">
      <%= inline_svg("copo-logo.svg") %>
      <h1 class="brand" data-in-effect="bounceIn">coposition</h1>
      <h5>Worry free location data management.</h5>
      <p>

      <script type="text/javascript">
             window.Maitre = { uuid: "MFfa39989fd3" };
      </script>
      <script data-maitre src='https://maitreapp.co/widget.js' async></script>
      <script type="text/javascript">
        responsiveVideo();

        function responsiveVideo() {
          var ratio = 1920/1080;
          // var h = $(".promo").height();
          // var w = $(".promo").width();
          var h = document.getElementsByClassName("promo")[0].clientHeight;
          var w = document.getElementsByClassName("promo")[0].clientWidth;
          var rRatio = w/h;

          if(rRatio < ratio) {
            // Aspect ratio is lower than 16:9
            document.getElementsByTagName("video")[0].style.width = "auto";
            document.getElementsByTagName("video")[0].style.height = "100%";
          }else{
            // Aspect ratio is higher than 16:9
            document.getElementsByTagName("video")[0].style.width = "100%";
            document.getElementsByTagName("video")[0].style.height = "auto";
          }
        }

        window.onresize = responsiveVideo;
      </script>
    </div>
  </div>
</body>
