.c-devices.a-show, .c-friends.a-show_device {

// ion.rangeSlider override stuff

  .irs-line-mid,
  .irs-line-left,
  .irs-line-right,
  .irs-bar,
  .irs-bar-edge,
  .irs-slider {
      background-image: url(<%= asset_path 'sprite-skin-flat-custom.png' %>);
  }

  .irs-from, .irs-to, .irs-single {
    color: #fff;
    background: $primary-color-darker;
  }
  .irs-from:after, .irs-to:after, .irs-single:after {
    border-top-color: $primary-color-darker;
  }

// end of override stuff

  #map {
    width:100%;
    position:absolute !important;
    top: 64px;
    margin-top: 55px;
  }

  .bottom-panel {
    position: absolute;
    bottom: 0px;
    display: block;
    width: 100%;
    text-align: center;
    background: white;
  }

  .bottom-panel * {
    margin: 0;
  }

  .buttons {
    margin: 10px;
  }

  .disabled-icon {
    color: rgba(0,0,0,0.12);
  }

  .enabled-icon {
    // Material Design specs suggest opacity: 0.25; but I don't think
    // it'd give enough countrast
  }

  .fogged {
    color: #2196f3;
  }

  .path-active {
    color: #FC8428;
  }

  #device-name {
    height: 55px;
    justify-content: center;
    background: white;
    font-size: 1.5rem;
  }
}

.c-devices.a-show {

  #map {
    bottom: 60px;
  }

  .bottom-panel {
    height: 60px;
  }

}
